<script>
  const audio = document.getElementById("audio");

  // autoplay setelah interaksi pertama (biar lolos browser)
  document.body.addEventListener("click", () => {
    audio.play();

    setTimeout(() => {
      audio.pause();
      audio.currentTime = 0;
    }, 5000); // 5 detik
  }, { once: true });
</script>

